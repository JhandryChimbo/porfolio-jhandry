---
import Layout from "../layouts/Layout.astro";
import AboutMe from "../components/AboutMe.astro";
import Badge from "../components/Badge.astro";
import BriefIcon from "../components/icons/Brief.astro";
import CodeIcon from "../components/icons/Code.astro";
import CorreoIcon from "../components/icons/Correo.astro";
import Experience from "../components/Experience.astro";
import GithubIcon from "../components/icons/Github.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import Profile from "@/components/icons/Profile.astro";
import Proyectos from "../components/Proyectos.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "../components/SocialPill.astro";
import Workana from "@/components/icons/Workana.astro";
import Hero from "@/components/Hero.astro";
---

<Layout
  title="Jhandry Chimbo - Desarrollador y Programador Front-end"
  description="Contrata a Jhandry para crear tu aplicación web o móvil. Desarrollador y programador front-end con experiencia en React, Next.js, y Tailwind CSS."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero />
    </SectionContainer>
  </main>
  <div class="space-y-24">
    <SectionContainer id="experiencia">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <BriefIcon class="size-8" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Proyectos />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
      >
        <Profile class="size-8" />
        Sobre mí
      </h2>
      <AboutMe />
    </SectionContainer>
  </div>
</Layout>
