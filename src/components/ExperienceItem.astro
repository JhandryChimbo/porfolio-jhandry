---
import LinkButton from "./LinkButton.astro";

interface Props {
  title: string;
  date: string;
  description: string;
  link?: string;
}
const { title, date, description, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80">{date}</time
>
<h3 class="text-xl font-bold  text-blue-500 dark:text-yellow-300/80">
  {title}
</h3>
<p class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3 text-pretty">
  {description}
</p>
{
  link && (
    <LinkButton href={link}>
      Saber m√°s{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </LinkButton>
  )
}
